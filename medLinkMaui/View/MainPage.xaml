<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:model="clr-namespace:MedLink.Logic.Models;assembly=MedLink.Logic"  
             x:Class="medLinkMaui.MainPage">

    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:Patient}">
                <model:Patient FirstName="Alice" LastName="Johns"/>
                <model:Patient FirstName="Bob" LastName="Smith"/>
                <model:Patient FirstName="Charlie" LastName="Brown"/>
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Patient">
                <HorizontalStackLayout>
                    <Label Text="{Binding FirstName}"/>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
</ContentPage>
