<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:model="clr-namespace:MedLink.Logic.Models;assembly=MedLink.Logic"  
             xmlns:viewmodel="clr-namespace:medLinkMaui.ViewModel"
             x:DataType="viewmodel:PatientViewModel"
             x:Class="medLinkMaui.View.MainPage"            
             Title="">

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,Auto">
        <SearchBar x:Name="PatientSearchBar"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Placeholder="Search Patients"
                   TextChanged="OnSearchTextChanged"
                   Margin="0"
                   HeightRequest="50"
                   VerticalOptions="Start"
                   TranslationY="0"
                   Opacity="0"
                   BackgroundColor="White"
                   ZIndex="1"/>
        <CollectionView x:Name="PatientCollectionView"
                            ItemsSource="{Binding FilteredPatients}"
                            Scrolled="OnCollectionViewScrolled"
                            Grid.ColumnSpan="2"
                            Grid.Row="0">
                <CollectionView.Header>
                    <BoxView x:Name="CollectionSpacer"
                             HeightRequest="50"
                             BackgroundColor="Transparent"/>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Patient">
                        <Frame HeightRequest="100"
                               Padding="0"
                               CornerRadius="12"
                               HasShadow="True"
                               BorderColor="LightGrey"
                               Margin="10">
                            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                                <Image Source="empty_profile.png"
                                       HeightRequest="100"
                                       WidthRequest="100"
                                       Aspect="AspectFill"
                                       Grid.Column="0"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"/>

                                <Grid Grid.Column="1" ColumnDefinitions="*,*" RowDefinitions="*,*">
                                    <Label Text="{Binding FirstName, StringFormat='First Name: {0}'}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"
                                           Margin="5,0,0,0"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           Grid.Column="0"
                                           Grid.Row="0"/>
                                    <Label Text="{Binding Phone, StringFormat='Contact: {0}'}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           Grid.Column="1"
                                           Grid.Row="0"/>
                                    <Label Text="{Binding LastName, StringFormat='Last Name: {0}'}"
                                           VerticalOptions="Start"
                                           HorizontalOptions="Start"
                                           Margin="5,8,0,0"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           Grid.Column="0"
                                           Grid.Row="1"/>
                                    <Label Text="{Binding Id, StringFormat='Id: {0}'}"
                                           VerticalOptions="Start"
                                           HorizontalOptions="Start"
                                           Margin="0,8,0,0"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           Grid.Column="1"
                                           Grid.Row="1"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        <Button Text="Search By Fingerprint"
                Command="{Binding SearchByFingerprintCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="2"
                Grid.Column="0"
                HeightRequest="10"
                Margin="8"/>

        <Button Text="Search By FaceId"
                Command="{Binding SearchByFaceIdCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="2"
                Grid.Column="1"
                Margin="8"/>

        <ActivityIndicator IsVisible="{Binding Isbusy}"
                           IsRunning="{Binding Isbusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>  

