<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:model="clr-namespace:MedLink.Logic.Models;assembly=MedLink.Logic"  
             xmlns:viewmodel="clr-namespace:medLinkMaui.ViewModel"
             x:DataType="viewmodel:PatientsViewModel"
             x:Class="medLinkMaui.View.MainPage"            
             Title="">

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,Auto">
        <SearchBar x:Name="PatientSearchBar"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Placeholder="Search Patients"
                   TextChanged="OnSearchTextChanged"
                   Margin="0"
                   HeightRequest="50"
                   VerticalOptions="Start"
                   TranslationY="0"
                   Opacity="0"
                   BackgroundColor="White"
                   ZIndex="1"/>
        <CollectionView x:Name="PatientCollectionView"
                            ItemsSource="{Binding FilteredPatients}"
                            Scrolled="OnCollectionViewScrolled"
                            Grid.ColumnSpan="2"
                            Grid.Row="0">
                <CollectionView.Header>
                    <BoxView x:Name="CollectionSpacer"
                             HeightRequest="50"
                             BackgroundColor="Transparent"/>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Patient">
                        <Border HeightRequest="100"
                                Padding="0"
                                StrokeThickness="1"
                                Stroke="LightGrey"
                                Margin="8,5,8,5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PatientsViewModel}}, Path=GoToDetailsCommand}"
                                CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                                <Image Source="empty_profile.png"
                                       HeightRequest="100"
                                       WidthRequest="100"
                                       Aspect="AspectFill"
                                       Grid.Column="0"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"/>

                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="5"
                                                     Margin="5,0,0,0"
                                                     VerticalOptions="Center">
                                    <Label Text="{Binding FullName}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="Black"/>

                                    <Label Text="{Binding Id, StringFormat='ID: {0}'}"
                                           FontSize="14"
                                           TextColor="Black"/>

                                    <Label Text="{Binding DOB, StringFormat='DOB: {0:MM/dd/yyyy}'}"
                                           FontSize="14"
                                           TextColor="Black"/>
                                </VerticalStackLayout>
                        </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        <Button Text="Search By Fingerprint"
                TextColor="#2a3f59"
                Command="{Binding SearchByFingerprintCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="2"
                Grid.Column="0"
                HeightRequest="10"
                Margin="8"
                BackgroundColor="#b6cee6"/>

        <Button Text="Search By FaceId"
                TextColor="#2a3f59"
                Command="{Binding SearchByFaceIdCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="2"
                Grid.Column="1"
                Margin="8"
                BackgroundColor="#b6cee6"/>

        <ActivityIndicator IsVisible="{Binding Isbusy}"
                           IsRunning="{Binding Isbusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>  

