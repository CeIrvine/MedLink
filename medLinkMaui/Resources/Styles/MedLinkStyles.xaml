<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="PrimaryColor">#2C3E50</Color>
    <Color x:Key="AccentColor">#5D6D7E</Color>
    <Color x:Key="BackgroundColor">#D6E7F5</Color>
    <Color x:Key="SurfaceColor">#F4F7FA</Color>
    <Color x:Key="ActionColor">#2980B9</Color>

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <Style x:Key="SectionHeader" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <Style x:Key="BodyLabel" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <Style x:Key="SubtextLabel" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
    </Style>

    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource PrimaryColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10" />
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{StaticResource SurfaceColor}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="10" />
    </Style>

</ResourceDictionary>

